= render PageHeader.new(title: @drill.name, subtitle: pluralize(@drill.duration_minutes, t(:minute))) do 
    = link_to t("drill.edit"), edit_drill_path(@drill), class: "btn-primary"
.page-list
    .page
        .body
            = markdown @drill.body
        .sidebar
            .sidebar-item 
                - @drill.tags.each do |tag|
                    .tag= t("tags.#{tag}")
            - if @drill.keys?
                .sidebar-item
                    .sidebar-heading= Drill.human_attribute_name(:keys) 
                    - @drill.keys.each do |key|
                        .text-sm= key 
            - if @drill.variations?
                .sidebar-item
                    .sidebar-heading= Drill.human_attribute_name(:variations) 
                    - @drill.variations.each do |variation|
                        .text-sm= variation 
            - if @drill.goals?
                .sidebar-item
                    .sidebar-heading= Drill.human_attribute_name(:goals) 
                    - @drill.goals.each do |goal|
                        .text-sm= goal 