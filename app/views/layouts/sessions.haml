!!!5 
%html
  %head
    %title= t("app.name")
    %meta{ name: "viewport", content: "width=device-width,initial-scale=1" }
    %link{ rel: "preconnect", href: "//fonts.googleapis.com" }
    %link{ rel: "preconnect", href: "//fonts.gstatic.com", crossorigin: true }
    %link{ rel: "stylesheet", href: "//fonts.googleapis.com/css2?family=Anek+Tamil:wght@100;400;700&display=swap" }
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_include_tag "application", "data-turbo-track": "reload", defer: true 
  %body.sessions
    %div{class: "lg:grid grid-cols-3 grid-rows-1 gap-2 w-screen h-screen"}
      %div{class: "py-0 lg:p-8 lg:col-start-2 lg:col-end-2 lg:align-middle"}
        %div{class: "shadow px-4 py-8 lg:px-10 xl:px-12 lg:py-16 lg:rounded-2xl bg-neutral-100 dark:bg-neutral-800 h-screen lg:h-auto"}
          - unless flash.empty?
            .flashes
              - flash.each do |type, message| 
                %div{ class: "flash-#{type}"}= message
          = yield
          .hidden
            .flashes
              .flash-notice
              .flash-warning
              .flash-success