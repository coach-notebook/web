.text-3xl.mb-8= t("en.signin")
= form_tag do
    .mb-8.col-span-3
        = label_tag User.human_attribute_name(:email_address), nil, { class: "pl-0 p-1 form-label" }
        = text_field_tag :email_address, '', {class:"form-input text-2xl"}
    .mb-8.col-span-3
        = label_tag User.human_attribute_name(:password), nil, { class: "pl-0 p-1 form-label" }
        = password_field_tag :password, '', {class:"form-input text-2xl"}
    .col-span-2.col-start-1
        = submit_tag t("session.new"), { class:"form-submit w-full"}