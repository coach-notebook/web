= render PageHeader.new(title: @squad.name, subtitle: [@squad.season, @squad.competition]) do 
    = link_to(t("squad.edit"), edit_squad_path(@squad), class: "btn-primary")
    = link_to(t("practice.new"), new_practice_path(@squad), class: "btn-primary")
.page-list    
    %div
        .page-title= Practice.model_name.human.pluralize
        .gridx4= render @squad.practices.accessible_to(current_user).order(:practice_at).where('practice_at > ?', Time.now)
    %div 
        .page-title= Team.model_name.human.pluralize
        .gridx4= render @squad.teams.accessible_to(current_user)